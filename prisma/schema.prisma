// This is your Prisma schema file
// Learn more about it here: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  major     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id                     String   @id @default(cuid())
  title                  String
  dateISO                String
  city                   String
  tags                   String   // JSON array stored as string
  imageUrl               String?
  recommendedMajors      String   // JSON array stored as string
  isPaid                 Boolean  @default(false)
  priceGBP               Float?
  distanceBucket         String   // "local" | "nearby" | "city-away"
  isOppositeOfUserMajor  Boolean  @default(false)
  hasFirstTimeBonus      Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}